{% extends '@App/layout.html.twig' %}

{% block body %}
    {% include '@App/companyAdmin/components/navbar.html.twig' %}
    <ol class="breadcrumb">
        <li><a href="{{ path('app_company_admin_homepage') }}">Dashboard</a></li>
        <li><a href="{{ path('app_company_admin_worker_list', {'manager': app.user.id}) }}">Worker List</a></li>
        <li><a href="{{ path('app_company_admin_appraise_list', {'manager': manager.id, 'worker': worker.id}) }}">Appraise List</a></li>
        <li class="active">Appraise Remove</li>
    </ol>

    <div class="page-header">
        <h1>Appraise Remove <br class="visible-xs"><small>Please confirm removal of this appraise</small></h1>
    </div>

    <div class="remove-confirmation-area bg-danger">
        <div>Id: <b>{{ appraise.id }}</b></div>
        <div>Rate: <b>{{ appraise.rate }}</b></div>
        <div>Description: <b>{{ appraise.description }}</b></div>
        <div>Date: <b>{{ appraise.date | date('Y-m-d H:i:s') }}</b></div>
    </div>
    {{ form(form) }}
{% endblock %}