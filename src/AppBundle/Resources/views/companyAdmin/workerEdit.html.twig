{% extends '@App/layout.html.twig' %}

{% block body %}
    {% include '@App/companyAdmin/components/navbar.html.twig' %}
    <ol class="breadcrumb">
        <li><a href="{{ path('app_company_admin_homepage') }}">Dashboard</a></li>
        <li><a href="{{ path('app_company_admin_worker_list', {'manager': app.user.id}) }}">Worker List</a></li>
        <li class="active">Worker Edit</li>
    </ol>

    <div class="page-header">
        <h1>Worker Edit <br class="visible-xs"><small>Edit worker</small></h1>
    </div>

    {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.surname) }}
        {{ form_row(form.save, {'label': 'Save'}) }}
    {{ form_end(form) }}
{% endblock %}